<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:background="@color/colorPrimaryDark">

    <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:id="@+id/circleImageView"/>

    <TextView
            android:fontFamily="@font/palanquin_dark"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            tools:text="@tools:sample/first_names"
            android:id="@+id/memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/circleImageView" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:fontFamily="@font/palanquin_dark"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            tools:text="Age : 25"
            android:id="@+id/age"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            tools:text="vignesh@gmail.com"
            android:fontFamily="@font/palanquin_dark"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/memberName"
            app:layout_constraintStart_toEndOf="@+id/circleImageView" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            tools:text="(431) 323 -32321321"
            android:fontFamily="@font/palanquin_dark"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/age" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:src="@drawable/ic_bookmark_unchecked_black_24dp"
            android:id="@+id/favouriteMember"
            android:layout_width="24dp" android:layout_height="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/age" android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>