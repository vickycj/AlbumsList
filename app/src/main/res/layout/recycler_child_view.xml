<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/childHeadView"
        android:paddingTop="@dimen/DP_16"
        android:layout_marginStart="@dimen/DP_8"
        android:layout_marginEnd="@dimen/DP_8"
        android:background="@color/colorPrimaryDark">

    <ImageView

            android:layout_width="@dimen/DP_200"
               android:src="@drawable/logo"
               android:layout_height="@dimen/DP_200" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@+id/title" app:layout_constraintVertical_bias="0.0"
               android:id="@+id/logo"/>


    <TextView

            android:text="@string/app_name"
            android:fontFamily="@font/palanquin_dark"
            android:textColor="@color/textColor"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textSize="14sp"
            android:id="@+id/title"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>